{
  "name": "orb/orb",
  "description": "A quick and easy framework to rapidly create API or simple website.",
  "license": "MIT",
  "keywords": [
    "framework",
    "middleware",
    "psr",
    "psr-7",
    "psr-15"
  ],
  "authors": [
    {
      "name": "Alexandre DEBUSSCHERE",
      "email": "alexandre.debusschere@hey.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "ext-dom": "*",
    "monolog/monolog": "^3.9",
    "league/container": "^4.2",
    "laminas/laminas-diactoros": "^3.5",
    "nikic/fast-route": "^1.3",
    "borschphp/router": "^2.1"
  },
  "require-dev": {
    "pestphp/pest": "^3.0",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Orb\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OrbTest\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
